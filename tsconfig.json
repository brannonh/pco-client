{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016"],
    "module": "ES2015",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": ["src/**/*.ts", "package.json"]
}
